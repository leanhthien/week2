<resources>


    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- This is the styling for action bar -->
        <!--<item name="actionBarStyle">@style/MyActionBar</item>-->
    </style>

    <style name="MyActionBar" parent="@style/Theme.AppCompat.Light.DarkActionBar">
        <item name="background">@color/dark_black</item>
        <item name="titleTextStyle">@style/MyActionBarTitle</item>
    </style>

    <style name="MyActionBarTitle" parent="@style/TextAppearance.AppCompat.Light.SearchResult.Subtitle">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="NoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
    </style>




</resources>
